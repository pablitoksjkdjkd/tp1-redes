---
import Hamburger from "../components/Hamburger.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header>
			<nav id="navbar">
				<div id="logo">
					<a> <img src="/favicon.ico" /></a>
				</div>
				<div id="menu">
					<a href="/layouts/pages/about.astro">inicio</a>
					<a href="sdd">contacto</a>
				</div>
				<div><Hamburger /></div>
			</nav>
		</header>
		<slot />
	</body>
</html>
<style>
	#navbar {
		display: flex;
		justify-content: space-between;
		padding: 20px;
	}
	.fondo {
		background-color: rgb(255, 0, 0);
	}
	@font-face {
		font-family: "DistantGalaxy";
		src: url("/fonts/Y2K_neophyte") format("ttf");
		font-weight: normal;
		font-style: normal;
		font-display: swap;
	}
</style>
